<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/bootstrap/css/bootstrap.css' />
    <link rel="stylesheet" href="/stylesheets/userlogin.css">
    <link rel="stylesheet" href="/stylesheets/header.css">
    <link rel="stylesheet" href="/stylesheets/footer.css">
    <script type="text/javascript" src="/bootstrap/js/jquery-1.11.0.js"></script>
    <script type="text/javascript" src="/bootstrap/js/bootstrap.js"></script>
  </head>
  <body>  
    <%- include("header.ejs",{title:'登录',logout:"退出",who:'--',create:'',index:'',isNew:isNew})%>
    <div class="container">
      <form class="form-horizontal" action="/userlogin/validate" method="post">
        <div class="form-group">     
          <div class="col-sm-10">
            <div class="email-pic">
              <i class="glyphicon glyphicon-envelope"></i>
            </div>
            <input type="email" class="form-control" id="inputEmail3" placeholder="请输入邮箱" name="email">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-10">
            <div class="email-pic">
              <i class="glyphicon glyphicon-lock"></i>
            </div>
            <input type="password" class="form-control" id="inputPassword3" placeholder="请输入密码" name="password">
          </div>
        </div>
         <% if(isShow){%>
              <div class="alert alert-danger" role="alert" id="warn-password">
              用户名和密码不匹配
             </div>
          <%}%>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10" id="to-login">
            <button type="submit" class="btn btn-default" >登录</button>
          </div>
          <div class="col-sm-offset-2 col-sm-10" id="to-register">
            <button type="button" class="btn btn-default"><a href="/userregister">立即注册</a>
          </button>
        </div>
      </form>
    </div>
    </div>
      
    <%- include("footer.ejs") %> 
  </body>
</html>
